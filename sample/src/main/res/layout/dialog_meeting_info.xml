<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/maincolor1">

    <GridLayout
        android:layout_width="wrap_content"
        android:columnCount="2"
        android:rowCount="6"
        android:maxWidth="400dp"


        android:useDefaultMargins="true"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">



        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Meeting ID"
            android:id="@+id/key_meeting_id"
            android:layout_column="0"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:layout_row="1"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0142564"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:id="@+id/value_meeting_id"
            android:layout_column="1"
            android:layout_row="1"

            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Passcode"
            android:id="@+id/key_passcode"
            android:layout_column="0"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:layout_row="2"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0afj3b"
            android:id="@+id/value_passcode"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="2"

            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Invitation link \n (Tap to copy)"
            android:id="@+id/key_invite"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:layout_column="0"
            android:layout_row="3"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="https://us04web.zoom.us/j/78031233846?pwd=U24rN09XeFRtbkp5ekx5UXA3UzZ4Zz09"
            android:id="@+id/value_invite"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="3"

            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Invite QR"
            android:id="@+id/key_qr"
            android:layout_column="0"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:layout_row="4"
            />

        <ImageView android:layout_width="180dp"
            android:layout_height="180dp"
            android:text="https://us04web.zoom.us/j/78031233846?pwd=U24rN09XeFRtbkp5ekx5UXA3UzZ4Zz09"
            android:id="@+id/value_qr"
            android:layout_column="1"

            android:layout_row="4"
            android:src="@drawable/qr"

            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Participant ID"
            android:id="@+id/key_participant"
            android:layout_column="0"
            android:layout_row="5"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="h341453"
            android:textColor="@color/light_text"
            android:textSize="15sp"
            android:id="@+id/value_participant"
            android:layout_column="1"
            android:layout_row="5"

            />



    </GridLayout>

</LinearLayout>