<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/mainbgcolor"
    android:paddingHorizontal="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_light_bg"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">



        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#00000000"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text"
            android:singleLine="true"
            android:hint="Input name" />


        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text"
            android:hint="Input meeting  password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aa"
            android:id="@+id/layout_pwd"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aa"
            android:id="@+id/layout_name"
            android:visibility="gone"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dark_button_bg"
            android:textColor="@color/light_button_color1"
            android:minHeight="35dp"
            android:layout_weight="1"
            android:text="OK"></Button>

        <Button
            android:id="@+id/btn_leave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/dark_button_bg"
            android:textColor="@color/light_button_color1"
            android:minHeight="35dp"
            android:layout_weight="1"
            android:text="Leave"></Button>
    </LinearLayout>

</LinearLayout>